<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".list_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        tools:context=".list_food">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/trove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_back"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Bia"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="110dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TabHost
            android:id="@+id/tabhost1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--Tab widget để chọn tab-->
                <!--FrameLayout  chứa dữ liệu của activity-->
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFCFC" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp">
                    <!--for tab 1-->
                    <LinearLayout
                        android:id="@+id/tab11"
                        android:layout_width="430dp"
                        android:layout_height="655dp"
                        android:background="#CCCCCC"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/ListviewTraSua"
                            android:layout_width="430dp"
                            android:layout_height="655dp"
                            android:divider="@null"
                            android:dividerHeight="1sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>

                    <!--for tab 2-->
                    <LinearLayout
                        android:id="@+id/tab22"
                        android:layout_width="430dp"
                        android:background="#CCCCCC"
                        android:layout_height="655dp"
                        android:orientation="vertical">

                        <!--Text View  để áp dụng văn bản vào tab-->
                        <ListView
                            android:id="@+id/ListviewTraSua1"
                            android:layout_width="430dp"
                            android:layout_height="655dp"
                            android:divider="@null"
                            android:dividerHeight="1sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>

                    <!--for tab 3-->
                    <LinearLayout
                        android:id="@+id/tab33"
                        android:layout_width="430dp"
                        android:background="#CCCCCC"
                        android:layout_height="655dp"
                        android:orientation="vertical">

                        <!--Text View để áp dụng văn bản vào tab-->
                        <ListView
                            android:id="@+id/ListviewTraSua2"
                            android:layout_width="430dp"
                            android:layout_height="655dp"
                            android:divider="@null"
                            android:dividerHeight="1sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>
                    <!--for tab 2-->
                    <LinearLayout
                        android:id="@+id/tab44"
                        android:layout_width="430dp"
                        android:background="#CCCCCC"
                        android:layout_height="655dp"
                        android:orientation="vertical">

                        <!--Text View  để áp dụng văn bản vào tab-->
                        <ListView
                            android:id="@+id/ListviewTraSua3"
                            android:layout_width="430dp"
                            android:layout_height="655dp"
                            android:divider="@null"
                            android:dividerHeight="1sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>