<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFood"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
             />

        <TextView
            android:id="@+id/nameFood"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgFood"
            android:text="Tên món ăn"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/likeFood"
            android:layout_width="500dp"
            android:layout_height="25dp"
            android:layout_below="@id/nameFood"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imgFood"
            android:text="like"
            android:textColor="#777777"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/priceFood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/likeFood"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imgFood"
            android:layout_marginLeft="15dp"
            android:text="price"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="19sp" />
        <ImageButton
            android:id="@+id/btn_addcart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/priceFood"
            android:layout_below="@id/nameFood"
            android:background="@drawable/ic_baseline_add_shopping_cart"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

